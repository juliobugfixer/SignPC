@{
    ViewData["Title"] = "Apagar Administrador";
}


@model SignPC.Entities.UsuarioConta

        <form asp-controller="Conta" asp-action="Deletar" method="post">
            <input type="hidden" asp-for="Id">  
                <div class="mb-3 col-md">
                    <input type="text" disabled asp-for="Nome" class="form-control"/>
                </div>
            <div class="mb-3 col-md">
                    <input type="email" disabled asp-for="Email" class="form-control"/>
            </div>
            <div class="mb-3 col-md">
                <input type="password" disabled asp-for="Senha" class="form-control"/>
                </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">Apagar</button>
                    <a asp-controller="Conta" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </center>
            </div>
        </form>
